{
  "info": {
    "name": "RTMS API",
    "description": "Colecci√≥n de Postman para la API de RTMS",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000",
      "type": "string"
    },
    {
      "key": "firebase_token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{firebase_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/auth/me/",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "me", ""]
            }
          }
        },
        {
          "name": "Verify Token",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{firebase_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/auth/verify/",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "verify", ""]
            }
          }
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "List Users",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{firebase_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/users/?page=1&page_size=20",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "users", ""],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "page_size",
                  "value": "20"
                }
              ]
            }
          }
        },
        {
          "name": "Get User",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{firebase_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/users/1/",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "users", "1", ""]
            }
          }
        },
        {
          "name": "Create User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{firebase_token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"nuevo@example.com\",\n  \"password\": \"password123\",\n  \"first_name\": \"Nuevo\",\n  \"last_name\": \"Usuario\",\n  \"role\": \"player\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/users/",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "users", ""]
            }
          }
        },
        {
          "name": "Update User",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{firebase_token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"first_name\": \"Nombre Actualizado\",\n  \"last_name\": \"Apellido Actualizado\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/users/1/",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "users", "1", ""]
            }
          }
        },
        {
          "name": "Delete User",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{firebase_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/users/1/",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "users", "1", ""]
            }
          }
        },
        {
          "name": "User Stats",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{firebase_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/users/stats/",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "users", "stats", ""]
            }
          }
        }
      ]
    },
    {
      "name": "Documentation",
      "item": [
        {
          "name": "Swagger UI",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/swagger/",
              "host": ["{{base_url}}"],
              "path": ["swagger", ""]
            }
          }
        },
        {
          "name": "ReDoc",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/redoc/",
              "host": ["{{base_url}}"],
              "path": ["redoc", ""]
            }
          }
        },
        {
          "name": "Swagger JSON Schema",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/swagger.json",
              "host": ["{{base_url}}"],
              "path": ["swagger.json"]
            }
          }
        }
      ]
    }
  ]
}

